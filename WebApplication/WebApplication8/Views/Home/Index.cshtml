@{
    ViewBag.Title = "Home Page";
}


<div class="row">
    <div class="col-md-4">
        <table class="table">
            <caption>Список</caption>
            <thead>
                <tr>
                    <th> Name</th>
                    <th>MobilePhone</th>
                    <th>Dear</th>
                    <th>JobTitle</th>
                    <th>BirthDate</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table><br>
        <button class="btn btn-link">еще</button>

        <button class="btn btn-primary" id="create-contact">ДОБАВИТЬ</button>  
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Изменение</h4>
            </div>

            <form action="" method="post" id="Contact">
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label class="control-label" for="Name">Name</label>
                            </div>
                            <div class="col-md-8 col-sm-8 col-xs-8">
                                <input type="text" name="Name" class="form-control" id="Name">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label class="control-label" for="MobilePhone">MobilePhone</label>
                            </div>
                            <div class="col-md-8 col-sm-8 col-xs-8">
                                <input type="tel" name="MobilePhone" class="form-control" id="MobilePhone">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label class="control-label" for="Dear">Dear</label>
                            </div>
                            <div class="col-md-8 col-sm-8 col-xs-8">
                                <input type="text" name="Dear" class="form-control" id="Dear">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label class="control-label" for="JobTitle">JobTitle</label>
                            </div>
                            <div class="col-md-8 col-sm-8 col-xs-8">
                                <input type="text" name="JobTitle" class="form-control" id="JobTitle">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label class="control-label" for="datetimepicker10">BirthDate</label>
                            </div>
                            <div class="col-md-8 col-sm-8 col-xs-8">
                                <input type='text' name="BirthDate" class="form-control" id='datetimepicker10' />

                            </div>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-primary" id="save-contact">Сохранить</button>
                    <button type="button" class="btn btn-danger" id="delete-contact">Delete</button> 
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
<script src="~/Scripts/myscript.js"></script>
    }